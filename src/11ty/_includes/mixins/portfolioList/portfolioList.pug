mixin portfolioList
	each project, index in portfolioList
		- var cardAlternate = index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"
		a(class=`${project.bgColor} card w-full p-8 flex flex-col-reverse ${cardAlternate} md:justify-center md:items-center md:justify-between shadow`, href=project.url, title=`View ${project.title}`)
			div(class=" md:w-5/12")
				h2(class="text-2xl sm:text-3xl mb-3") #{project.title}
				p(class="text-md sm:text-lg font-medium") #{project.description}
				div(class="mt-8 flex")
					p(class="card__action text-md sm:text-lg font-medium") View Project
			div(class="hidden sm:block mb-4 sm:mb-0 md:w-6/12")
				img.u-max-responsive-img(src=project.imageUrl , alt="")
				//- don't need alt text since img is a decoration and have surround desc text
